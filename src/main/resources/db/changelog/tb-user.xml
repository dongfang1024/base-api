<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="20201210115631" author="dongfang" >

        <createTable tableName="user" remarks="用户表">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_demo_user_id"/>
            </column>
            <column name="name" type="varchar(30)" remarks="姓名">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="tinyint" remarks="性别"/>
            <column name="username" type="varchar(50)" remarks="用户名"/>
            <column name="password" type="varchar(200)" remarks="密码"/>
            <column name="remarks" type="varchar(200)" remarks="备注" />
            <column name="created_time" type="date" remarks="创建时间" />
            <column name="created_by" type="bigint" remarks="创建人"/>
            <column name="updated_time" type="date" remarks="更新时间" />
            <column name="updated_by" type="bigint" remarks="更新人" />
            <column name="del_flag" type="boolean" remarks="是否删除" />
        </createTable>

        <createIndex tableName="user" indexName="idxUserName">
            <column name="name"></column>
        </createIndex>
        <createIndex tableName="user" indexName="idxUserUsername">
            <column name="username"></column>
        </createIndex>
    </changeSet>
</databaseChangeLog>